{
  "version": "1.18.2-beta.0",
  "name": "cross-sdk-js-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "version:set": "node scripts/set-version.js",
    "prerelease:increment": "node scripts/increment-alpha-beta-version.js",
    "alpha:increment": "node scripts/increment-alpha-beta-version.js",
    "beta:increment": "node scripts/increment-alpha-beta-version.js",
    "prebuild": "node scripts/inject-version.js",
    "build:clean": "turbo run build:clean --filter={./packages/*}",
    "build:sample-apps": "turbo run build --filter={./examples/*} --filter=!@examples/cocos-creator",
    "build:example:wagmi-cdn": "pnpm build; pnpm --filter @examples/html-wagmi-cdn build",
    "build:example:vue-wagmi": "pnpm --filter @examples/vue-wagmi build",
    "build:example:parcel-react-wagmi": "pnpm --filter @examples/parcel-react-wagmi build",
    "build:example:wagmi-app-router": "pnpm --filter @examples/next-wagmi-app-router build",
    "build": "turbo run build --filter={./packages/*} --filter={./packages/adapters/*} --filter=!@to-nexus/appkit-adapter-bitcoin --filter=!@to-nexus/appkit-adapter-solana",
    "watch": "turbo run watch --filter={./packages/*,./packages/adapters/*} --concurrency=50 --continue",
    "gallery": "turbo run dev --filter={./apps/gallery}",
    "gallery-new": "turbo run dev --filter={./apps/gallery-new}",
    "laboratory": "pnpm --filter @apps/laboratory dev",
    "builder:dev": "pnpm --filter @apps/builder dev",
    "builder:build": "pnpm build; pnpm --filter @apps/builder build",
    "laboratory-new": "pnpm --filter @apps/laboratory-new dev",
    "browser-extension": "pnpm --filter @apps/browser-extension dev",
    "examples": "turbo run dev --filter={./examples/*} --filter=!@examples/cocos-creator",
    "build:gallery": "pnpm build; pnpm --filter=./apps/gallery build",
    "build:gallery-new": "pnpm build; pnpm --filter=./apps/gallery-new build",
    "build:laboratory": "pnpm build; pnpm --filter=./apps/laboratory build",
    "build:laboratory-new": "pnpm build; pnpm --filter=./apps/laboratory-new build",
    "build:examples": "pnpm build && cd examples/sdk-cdn && npm run update-cdn",
    "build:cocos-creator": "pnpm --filter @examples/cocos-creator build",
    "build:browser-extension": "pnpm --filter @apps/browser-extension build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage.enabled=true --coverage.reporter=html --coverage.reportOnFailure=true --coverage.all=false --coverage.reportsDirectory=.coverage && vite preview --outDir .coverage --open --port 4777",
    "test:ci": "vitest run --coverage.enabled=true --coverage.reporter=json --coverage.reporter=json-summary --coverage.reportOnFailure=true --coverage.all=false",
    "test:static": "pnpm run typecheck; pnpm run lint; pnpm run prettier",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "danger": "danger ci",
    "prettier": "prettier --check .",
    "prettier:format": "prettier --write .",
    "clean": "rm -rf `find . -type d -name node_modules -o -name dist -o -name .next -o -name out`; rm pnpm-lock.yaml",
    "auto-changeset": "node scripts/auto-changeset.cjs",
    "changeset:pre": "changeset pre enter",
    "changeset:pre:exit": "changeset pre exit",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm publish:latest",
    "publish:latest": "pnpm install; pnpm build; changeset publish",
    "publish:alpha": "pnpm install; pnpm build; changeset publish --tag alpha",
    "publish:beta": "pnpm install; pnpm build; changeset publish --tag beta",
    "publish:canary": "pnpm install; pnpm build; changeset publish --tag canary",
    "prepare": "husky",
    "run:examples": "pnpm run build && cd examples && pnpm run examples",
    "packages:version:switch": "node scripts/dependency-switcher.cjs",
    "push:external": "bash scripts/sync-external-sdks.sh push",
    "push:external:universal": "bash scripts/sync-external-sdks.sh selective-push universal-provider",
    "pull:external": "bash scripts/sync-external-sdks.sh pull",
    "pull:external:sign-client": "bash scripts/sync-external-sdks.sh pull sign-client",
    "pull:external:universal": "bash scripts/sync-external-sdks.sh pull universal-provider",
    "compare:external:sign-client": "bash scripts/sync-external-sdks.sh compare sign-client",
    "compare:external:universal": "bash scripts/sync-external-sdks.sh compare universal-provider"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.12",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/node": "22.13.4",
    "@types/react": "19.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "@vitest/coverage-v8": "2.1.3",
    "@vitest/ui": "2.1.8",
    "buffer": "5.5.0||6.0.0",
    "danger": "11.3.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-require-extensions": "0.1.3",
    "husky": "9.1.7",
    "jsdom": "24.1.0",
    "pino": "7.11.0",
    "prettier": "3.5.1",
    "process": "0.11.10",
    "rollup": "^4.45.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "turbo": "2.0.6-canary.0",
    "typescript": "5.7.3",
    "vite": "5.4.12",
    "vite-plugin-node-polyfills": "0.23.0",
    "vitest": "2.1.9"
  },
  "packageManager": "pnpm@9.5.0",
  "pnpm": {
    "overrides": {
      "@solana/web3.js": "1.95.8",
      "@wagmi/core": "2.16.4",
      "wagmi": "2.14.11",
      "viem": "^2.38.0"
    }
  },
  "resolutions": {
    "@solana/web3.js": "1.95.8",
    "viem": "^2.38.4"
  },
  "overrides": {
    "@solana/web3.js": "1.95.8",
    "viem": "^2.38.4"
  },
  "@parcel/resolver-default": {
    "packageExports": true
  },
  "dependencies": {
    "caver-js": "^1.12.2"
  }
}
